#!/usr/bin/env bash

# Go shit
export GOPATH=$HOME/gopath
export PATH="$GOPATH/bin:$PATH"

# Android shit
export ANDROID_HOME="$HOME/Library/Android/sdk"
export ANDROID_SDK=$ANDROID_HOME
export ANDROID_SDK_ROOT=$ANDROID_HOME
export ANDROID_NDK="$HOME/Library/Android/ndk"
export ANDROID_NDK_ROOT=$ANDROID_NDK
export ANDROID_NDK_HOME=$ANDROID_NDK
export PATH="$PATH:$ANDROID_HOME"
export PATH="$PATH:$ANDROID_HOME/tools/bin"
export PATH="$PATH:$ANDROID_HOME/emulator"
export PATH="$PATH:$ANDROID_HOME/platform-tools"
export PATH="$PATH:$ANDROID_HOME/build-tools/28.0.3"
alias bundletool="java -jar $HOME/bin/bundletool.jar"

# Java shit
export JAVA_HOME="$HOME/.asdf/installs/java/openjdk-11"
export PATH="$PATH:$JAVA_HOME/bin"

# Rust shit
# export PATH="$PATH:$HOME/.cargo/bin"

# Flutter/Dart shit
export FLUTTER_HOME="$HOME/.asdf/installs/flutter/3.0.2-stable"
export FLUTTER_ROOT="$FLUTTER_HOME"
export ENABLE_FLUTTER_DESKTOP=true
export PATH="$PATH:$FLUTTER_HOME/bin:$HOME/.pub-cache/bin"

# ASDF-VM
[[ "$OSTYPE" == "darwin"* ]] && {
    echo -e "\n. $(brew --prefix asdf)/libexec/asdf.sh" >> ${ZDOTDIR:-~}/.zshrc
}
[[ "$OSTYPE" == "linux-gnu"* ]] && {
    . $HOME/.asdf/asdf.sh
}
